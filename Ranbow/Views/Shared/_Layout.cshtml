<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content="Ranbow" property="og:title" />
    <meta content="Randomize Rainbow Six operators here." property="og:description" />
    <meta content="https://ranbow.flipped.codes" property="og:url" />
    <meta content="~/images/Logos/bluefire-01.png" property="og:image" />
    <meta content="#0090ff" data-react-helmet="true" name="theme-color" />
    <title>@ViewData["Title"] - Ranbow</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/collapsibleStyles.css" />
    <link rel="stylesheet" href="~/css/randomizeButton.css" />
</head>
<body style="background-color: #24282c;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Logos/bluefire-01.png" width="100" height="100" />
                </a>
                <a class="navbar-brand" asp-area="" asp-controller="Ranbowmizer" asp-action="Ranbow">Ranbow</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a class="nav-link text-light" asp-area="" asp-controller="Ranbowmizer" asp-action="Ranbow">Ranbow</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #343a40;">
        <div class="container row">
            <div class="col-4"></div>
            <div class="col-3">&copy; 2022 - <a href="https://github.com/BlueFireCode/Ranbow">BlueFireCode - Ranbow</a></div>
            <div class="col-3"></div>
            <div class="col-1">More up to date than <a href="https://www.ubisoft.com/en-gb/game/rainbow-six/siege/game-info/operators">the official website!</a></div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
