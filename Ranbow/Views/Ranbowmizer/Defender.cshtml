@{
    ViewData["Title"] = "Defender";
}
<h1>@ViewData["Title"]</h1>

<input type="button" value="Attack" onclick="location.href='@Url.Action("Attacker", "Ranbowmizer")'" class="randomize-btn-image-atk"/>
<input type="button" value="Defense" onclick="location.href='@Url.Action("Defender", "Ranbowmizer")'" class="randomize-btn-image-def"/>

<p>Random Operator: @ViewBag.Random</p>
<p>Selected Primary: @ViewBag.Random.Primary1</p>
<ul>
    @if (ViewBag.Random.Primary1.Sights is not null)
    {
        <li>Selected Sight/Scope: @ViewBag.Random.Primary1.Sights</li>
    }
    @if (ViewBag.Random.Primary1.Barrels is not null)
    {
        <li>Selected Barrel: @ViewBag.Random.Primary1.Barrels</li>
    }
    @if (ViewBag.Random.Primary1.Grips is not null)
    {
        <li>Selected Grip: @ViewBag.Random.Primary1.Grips</li>
    }
    <li>Laser: @ViewBag.Random.Primary1.Laser</li>
</ul>
<p>Selected Secondary: @ViewBag.Random.Secondary1</p>
<ul>
    @if (ViewBag.Random.Secondary1.Sights is not null)
    {
        <li>Selected Sight/Scope: @ViewBag.Random.Secondary1.Sights</li>
    }
    @if (ViewBag.Random.Secondary1.Barrels is not null)
    {
        <li>Selected Barrel: @ViewBag.Random.Secondary1.Barrels</li>
    }
    @if (ViewBag.Random.Secondary1.Grips is not null)
    {
        <li>Selected Grip: @ViewBag.Random.Secondary1.Grips</li>
    }
    <li>Laser: @ViewBag.Random.Secondary1.Laser</li>
</ul>
<p>Selected Gadget: @ViewBag.Random.Gadget1</p>
@if (ViewBag.Description is not null)
{
    <p>Description: @ViewBag.Description</p>
}